{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean up",
            "type": "shell",
            "command": "rm -rf build",
            "problemMatcher": "" 
        }
        {
            "label": "build",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make",
            "options": {
                "env": {
                   "PDF_HOME": "${HOME}/local/ProteinDF"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$gcc"
        }
    ]
}
