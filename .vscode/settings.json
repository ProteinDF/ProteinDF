{
    "C_Cpp.dimInactiveRegions": true,
    "cmake.cmakePath": "/usr/local/bin/cmake",
    "cmake.configureOnOpen": true,
    "cmake.parallelJobs": 4,
    "cmake.ctest.parallelJobs": 1,
    "cmake.ctestArgs": ["-V"],
    "cmake.installPrefix": "${env:HOME}/local/ProteinDF.dev",
    "cmake.environment": {
        // "PATH": "${env:HOME}/local/openmpi3/bin:/usr/local/bin:${env:PATH}",
        "PDF_HOME": "${env:HOME}/local/ProteinDF",
        "LDFLAGS": "-L${env:HOME}/local/openmpi3/lib -lmpi -lgfortran"
    },
    "cmake.configureSettings": {
        "CMAKE_VERBOSE_MAKEFILE": "1",
        "CMAKE_CXX_FLAGS": "-O3 -mtune=native -march=native -mfpmath=both",
        "CMAKE_CXX_COMPILER": "/usr/local/bin/g++-8",
        //"CMAKE_EXE_LINKER_FLAGS": "-L${env:HOME}/local/openmpi3/lib -lmpi -lgfortran",

        "MPI_C_COMPILER": "/usr/local/bin/gcc-8",
        "MPI_C_INCLUDE_PATH": "${env:HOME}/local/openmpi3/include",
        "MPI_C_LIBRARIES": "-L${env:HOME}/local/openmpi3/lib -lmpi",
        "MPI_CXX_COMPILER": "/usr/local/bin/g++-8",
        "MPI_CXX_INCLUDE_PATH": "${env:HOME}/local/openmpi3/include",
        "MPI_CXX_LIBRARIES": "-L${env:HOME}/local/openmpi3/lib -lmpi",
        //"MPI_SKIP_COMPILER_WRAPPER": "1",
        //"MPI_SKIP_GUESSING": "1",
        // "MPI_CXX_SKIP_MPICXX": "1",

        "SCALAPACK_LIBRARIES": "-L${env:HOME}/local/openmpi3/lib -lscalapack",
        "VIENNACL_ROOT": "${env:HOME}/work/dev/viennacl-dev/",
        "GTEST_ROOT": "${env:HOME}/local/googletest",
    },
    "C_Cpp.configurationWarnings": "Disabled",
    "files.associations": {
        "__config": "cpp",
        "__nullptr": "cpp",
        "array": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "complex": "cpp",
        "condition_variable": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "list": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "fstream": "cpp",
        "functional": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "memory": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "ostream": "cpp",
        "ratio": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "thread": "cpp",
